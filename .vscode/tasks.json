{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "flutter run",
            "type": "shell",
            "command": "flutter",
            "args": ["run", "--debug"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/gastos_manager"
            }
        }
    ]
}